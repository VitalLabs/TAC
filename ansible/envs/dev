        from_port: "{{ cassandra_intermode_port }}"
        to_port: "{{ cassandra_intermode_port }}" 
        cidr_ip: 0.0.0.0/0
      - proto: tcp
        from_port: "{{ cassandra_native_port }}"
        to_port: "{{ cassandra_native_port }}"
        cidr_ip: 0.0.0.0/0

