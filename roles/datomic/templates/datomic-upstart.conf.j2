 
pre-start script
bash << "EOF"
mkdir -p /var/log/datomic
chown -R datomic /var/log/datomic
EOF
end script

# Start/stop conditions
start on runlevel [2345]

start on (started network-interface
or started network-manager
or started networking)
 
stop on runlevel [016]

stop on (stopping network-interface
or stopping network-manager
or stopping networking)

# Restart if it crashes
respawn
 
# Run the service
script
exec su - datomic -c 'cd {{ datomic_dir }}/runtime; {{ datomic_dir }}/runtime/bin/transactor -Xms400m -Xmx400m {{ datomic_dir}}/transactor.properties 2>&1 >> /var/log/datomic/datomic.log'
end script
 
