#!/bin/bash

# Usage: 'source bin/ansible-setup'

key=$1

if [ -a bin/aws_access ]; then
   export AWS_ACCESS_KEY_ID="`cat ~/.ssh/aws_access`"
   export AWS_SECRET_ACCESS_KEY="`cat ~/.ssh/aws_secret`"
fi

ssh-add -D

# Talk to Switchboard nodes via Ubuntu user
if [ -a ~/.ssh/$key ]; then
   ssh-add ~/.ssh/$key
fi

